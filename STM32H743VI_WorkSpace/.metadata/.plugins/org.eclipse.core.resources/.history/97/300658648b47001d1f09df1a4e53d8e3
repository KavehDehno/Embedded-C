/**
  * @brief FDCAN 1 TX function
  * @param None
  * @retval None
  */
void FDCAN_1_TX(void)
{
	TxHeader.IdType = FDCAN_STANDARD_ID;
	TxHeader.TxFrameType = FDCAN_DATA_FRAME;
	TxHeader.DataLength = FDCAN_DLC_BYTES_8;
	TxHeader.Identifier = 0x65;

	if (HAL_FDCAN_AddMessageToTxFifoQ(&hfdcan1, &TxHeader, FDCAN1_TX_Message) != HAL_OK)
	  {
		Error_Handler();
	  }
}



/**
  * @brief FDCAN 2 TX function
  * @param None
  * @retval None
  */
void FDCAN_2_TX(void)
{
	TxHeader.IdType = FDCAN_STANDARD_ID;
	TxHeader.TxFrameType = FDCAN_DATA_FRAME;
	TxHeader.DataLength = FDCAN_DLC_BYTES_8;
	TxHeader.Identifier = 0x32;

	if (HAL_FDCAN_AddMessageToTxFifoQ(&hfdcan2, &TxHeader, FDCAN2_TX_Message) != HAL_OK)
	  {
		Error_Handler();
	  }
}

